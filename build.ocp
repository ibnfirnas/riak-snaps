sort     = true
has_byte = false
has_asm  = true
cflags   = "-w +A"

begin library "threads"
     installed = true
     dirname   = [ "%{OCAMLLIB}%/threads" ]
     has_byte  = false
     requires  = [ "unix" ]
     byte +    = [ "-custom" ]
end

begin library "riak"
    requires = [
        "core"
        "async"
        "async_shell"
        "ezjsonm"
    ]
    files    = [
        "src/riak/riak.mli"
        "src/riak/riak.ml"
    ]
end

begin library "git"
    requires = [
        "core"
        "async"
        "async_shell"
        "str"
    ]
    files    = [
        "src/git/git.mli"
        "src/git/git.ml"
    ]
end

begin program "snaps"
    requires = [
        "core"
        "async"
        "async_shell"
        "threads"
        "riak"
        "git"
    ]
    files    = [
        "src/snaps/snaps_db.mli"
        "src/snaps/snaps_db.ml"
        "src/snaps/snaps_log.mli"
        "src/snaps/snaps_log.ml"
        "src/snaps/snaps_main.mli"
        "src/snaps/snaps_main.ml"
        "src/snaps/snaps_object_info.mli"
        "src/snaps/snaps_object_info.ml"
        "src/snaps/snaps_worker_fetch.mli"
        "src/snaps/snaps_worker_fetch.ml"
        "src/snaps/snaps_worker_store.mli"
        "src/snaps/snaps_worker_store.ml"
    ]
end
